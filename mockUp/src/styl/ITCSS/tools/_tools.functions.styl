// Add fallback when uses REM
parseInt(value)
    value / (value * 0 + 1)

rem-fallback(property, values)
    px = ()
    rem = ()

    for value in values

        if value == 0 or value == auto
            px = push(px , value)
            rem = push(rem, value)

        else
            unit = unit(value)
            val = parseInt(value)

            if unit == "px"
                px = push(px, value)
                rem = push(rem, ((val / 16) * 1rem ))
            if unit == "rem"
                px = push(px, ((val * 16) * 1px))
                rem = push(rem, value)

    if px == rem
        {property}: px
    else
        {property}: px
        {property}: rem
